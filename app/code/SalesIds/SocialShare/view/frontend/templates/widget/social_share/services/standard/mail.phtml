                <div class="control">
                    <textarea name="body" data-validate="{required:true}"><?php echo $this->getBody() ?></textarea>
                </div>
            </div>
            <?php if($this->getCaptchaHelper()->isEnabled()): ?>
                <div class="recaptcha">
                    <div id="g-recaptcha-<?php echo $this->getWidget()->getName() ?>"></div>
                </div>
            <?php endif; ?>
